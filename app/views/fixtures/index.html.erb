&nbsp; <%= image_tag "teams.jpg" %>
<!-- display image of all teams logos -->
<p></p>

<table>
  <thead>
    <tr>
      <th>&nbsp; Home</th>
      <th></th>
      <th></th>
      <th>Away</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <!-- column headings for home team, away team and date -->

  <tbody>
    <% @results.each do |result| %>
      <tr>
        <!-- loop through each result in the database and
        display the teams, scores and dates in a neat format -->
        <td>&nbsp; <%= result.home %> &nbsp; </td>
        <td><%= result.hg %> - </td>
        <td><%= result.ag %> &nbsp; </td>
        <td><%= result.away %> &nbsp; </td>
        <td><%= result.time %></td>
      </tr>
    <% end %>
  </tbody>
</table>
