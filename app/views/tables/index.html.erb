<%= image_tag "epl-banner.png" %>

<p></p>
<table>
  <thead>
  <tr>
    <th>&nbsp;Pos </th>
    <th>&nbsp;| Team </th>
    <th>&nbsp;| P </th>
    <th>&nbsp;| W </th>
    <th>&nbsp; | D </th>
    <th>&nbsp; | L </th>
    <th>&nbsp; | GF </th>
    <th>&nbsp;| GA </th>
    <th>&nbsp;| GD </th>
    <th>&nbsp;| Points</th>
    <th colspan="10"></th>
  </tr>
  </thead>

  <tbody>
    <tr>
      <td colspan="10"> ----------------------------------------------------------------------</td>
    </tr>
  </tbody>

  <% count = 0 %>
  <% array = Array.new(20){Array.new(10,0)} %>

  <% @table.each do |team| %>
    <% array[count][1] = team.name %>
    <% array[count][2] = team.wins + team.draws + team.losses %>
    <% array[count][3] = team.wins %>
    <% array[count][4] = team.draws %>
    <% array[count][5] = team.losses %>
    <% array[count][6] = team.gf %>
    <% array[count][7] = team.ga %>
    <% array[count][8] = team.gf - team.ga %>
    <% array[count][9] = 3*team.wins + team.draws %>
    <% count = count + 1 %>
  <% end %>

  <% pos = 1 %>
  <% array.sort_by!{|k| [ k[9], k[8], k[6] ] }.reverse! %>

  <% for i in array %>
    <tbody>
    <tr>
      <td>&nbsp;<%= pos %></td>
      <td>&nbsp;| <%= i[1] %></td>
      <td>&nbsp;| <%= i[2] %></td>
      <td>&nbsp;| <%= i[3] %></td>
      <td>&nbsp; | <%= i[4] %></td>
      <td>&nbsp; | <%= i[5] %></td>
      <td>&nbsp; | <%= i[6] %></td>
      <td>&nbsp;| <%= i[7] %></td>
      <td>&nbsp;| <%= i[8] %></td>
      <td>&nbsp;| <%= i[9] %></td>
    </tr>
    <% pos = pos + 1 %>
  <% end %>
  </tbody>
</table>

<p></p>
&nbsp; <%= link_to 'Back', :back %>